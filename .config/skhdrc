shift + alt - w : yabai -m space --destroy;

# fast focus desktop
alt - tab : yabai -m space --focus recent




# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-servce
ctrl + alt - r : yabai --restart-service; brew services restart sketchybar

hyper - q : brew services stop sketchybar
